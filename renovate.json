{
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    ":dependencyDashboard",
    ":preserveSemverRanges",
    ":label(dependencies)",
    ":separatePatchReleases",
    "group:definitelyTyped"
  ],
  "schedule": [
    "every weekend",
    "after 10pm every weekday",
    "before 6am every weekday"
  ],
  "automerge": true,
  "packageRules": [
    {
      "matchPackagePatterns": ["^@akashic/"],
      "excludePackageNames": ["@akashic/engine-files"],
      "schedule": "at any time",
      "groupName": "akashic packages",
      "automerge": false
    },
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint packages"
    },
    {
      "matchPackagePatterns": ["jest"],
      "groupName": "jest packages"
    },
    {
      "matchUpdateTypes": ["patch"],
      "excludePackagePatterns": ["@akashic/", "eslint", "jest"],
      "groupName": "patch dependencies"
    },
    {
      "matchUpdateTypes": ["minor"],
      "excludePackagePatterns": ["@akashic/", "eslint", "jest"],
      "groupName": "minor dependencies"
    },
    {
      "matchPackageNames": ["aev1", "aev2"],
      "matchUpdateTypes": ["major"],
      "enabled": false,
      "groupName": "aev1/aev2 major"
    },
    {
      "matchPackageNames": ["aev1"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "engine-files v1"
    },
    {
      "matchPackageNames": ["aev2"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "engine-files v2"
    }
  ]
}
